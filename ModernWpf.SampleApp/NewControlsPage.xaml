<local:ItemsPageBase
    x:Class="ModernWpf.SampleApp.NewControlsPage"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModernWpf.SampleApp"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Title="New Controls">
    <local:ItemsPageBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ItemTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:ControlsGroupKeyConverter x:Key="ControlsGroupKeyConverter" />
            <CollectionViewSource
                x:Key="ItemsCVS"
                Source="{Binding}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription
                        PropertyName="BadgeString"
                        Converter="{StaticResource ControlsGroupKeyConverter}" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
        </ResourceDictionary>
    </local:ItemsPageBase.Resources>

    <!-- This grid acts as a root panel for the page. -->
    <Grid Background="{DynamicResource HomePageBackgroundBrush}">
        <ui:GridView
            x:Name="itemGridView"
            Padding="40,0,12,36"
            AutomationProperties.AutomationId="ItemGridView"
            AutomationProperties.Name="Items In Group"
            VirtualizingPanel.IsVirtualizingWhenGrouping="True"
            VirtualizingPanel.VirtualizationMode="Recycling"
            IsItemClickEnabled="True"
            ItemsSource="{Binding Source={StaticResource ItemsCVS}}"
            ItemTemplate="{StaticResource ControlItemTemplate}"
            ItemClick="OnItemGridViewItemClick"
            ItemContainerStyle="{StaticResource IndentedGridViewItemStyle}"
            KeyDown="OnItemGridViewKeyDown"
            Loaded="OnItemGridViewLoaded"
            SizeChanged="OnItemGridViewSizeChanged"
            IsSelectionEnabled="False">
            <ui:GridView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock
                                x:Name="pageSubtitle"
                                Text="{Binding Name}"
                                Foreground="{DynamicResource ApplicationForegroundThemeBrush}"
                                Style="{DynamicResource SubtitleTextBlockStyle}"
                                Margin="4,34,0,0" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ui:GridView.GroupStyle>
        </ui:GridView>
        <local:PageHeader
            x:Name="pageHeader"
            Title="{StaticResource NewControlsName}"
            VerticalAlignment="Top"
            Foreground="{DynamicResource PageHeaderForegroundBrush}"
            Background="{DynamicResource HomePageBackgroundBrush}"
            FontSize="28"
            Visibility="Collapsed"
            Padding="{DynamicResource NavigationViewHeaderMargin}"
            IsHitTestVisible="False"
            ShadowOpacity="0" />
    </Grid>
</local:ItemsPageBase>
