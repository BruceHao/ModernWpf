<Window
    x:Class="SingleControlTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SingleControlTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="MainWindow"
    Width="800"
    Height="450"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <StackPanel
        Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
        Margin="4"
        HorizontalAlignment="Center"
        VerticalAlignment="Stretch">
        <CheckBox
            x:Name="IsEnable"
            Content="IsEnable"
            IsChecked="True"/>
        <Button
            Content="Test"
            Click="Button_Click"
            IsEnabled="{Binding IsChecked, ElementName=IsEnable}"
            Style="{DynamicResource AccentButtonStyle}" />
        <Calendar IsEnabled="{Binding IsChecked, ElementName=IsEnable}" />
    </StackPanel>
</Window>
