<Window
    x:Class="SingleControlTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SingleControlTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="MainWindow"
    Width="800"
    Height="450"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <StackPanel
        Margin="4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <CheckBox
            x:Name="IsEnable"
            Content="IsEnable"
            IsChecked="True" />
        <ListView
            x:Name="TabControl"
            ui:ControlHelper.Description="Test"
            ui:ControlHelper.Header="Test"
            ui:ControlHelper.PlaceholderText="Test"
            ui:ListViewHelper.Header="TestHeader"
            IsEnabled="{Binding IsChecked, ElementName=IsEnable, Mode=TwoWay}">
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
        </ListView>
    </StackPanel>
</Window>
