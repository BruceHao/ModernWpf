        </ui:SimpleStackPanel>

        <Slider
            x:Name="Value"
            Maximum="100"
            Minimum="0" />

        <ui:ProgressRing
            IsActive="{Binding IsOn, ElementName=IsActive}"
            IsEnabled="{Binding IsOn, ElementName=IsEnable}"
            IsIndeterminate="{Binding IsOn, ElementName=IsIndeterminate}"
            Value="{Binding Value, ElementName=Value}" />-->

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="55"
                TextWrapping="Wrap">
                Top
            </TextBlock>
            <GridSplitter
                Grid.Row="1"
                Height="5"
                ShowsPreview="True"
                HorizontalAlignment="Stretch" />
            <TextBlock
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="55"
                TextWrapping="Wrap">
