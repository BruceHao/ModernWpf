<Window
    x:Class="SingleControlTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SingleControlTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="MainWindow"
    Width="800"
    Height="450"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <StackPanel
        Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
        Margin="4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <ui:SimpleStackPanel Orientation="Horizontal" Spacing="16">
            <ui:ToggleSwitch
                x:Name="IsEnable"
                MinWidth="0"
                Header="IsEnable"
                IsOn="True" />
            <Button Click="Button_Click" Content="Test" />
        </ui:SimpleStackPanel>
        <!--<Calendar IsEnabled="{Binding IsOn, ElementName=IsEnable}" />-->
        <ui:ListView
            x:Name="ListView"
            IsEnabled="{Binding IsOn, ElementName=IsEnable}"
            SelectionMode="Multiple">
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
        </ui:ListView>
    </StackPanel>
</Window>
