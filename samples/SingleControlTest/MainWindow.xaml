<Window
    x:Class="SingleControlTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SingleControlTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="clr-namespace:ModernWpf.Media;assembly=ModernWpf"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="MainWindow"
    Width="800"
    Height="450"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <StackPanel
        Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
        Margin="4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <ui:SimpleStackPanel Orientation="Horizontal" Spacing="16">
            <ui:ToggleSwitch
                x:Name="IsEnable"
                MinWidth="0"
                Header="IsEnable"
                IsOn="True" />
            <ui:ToggleSwitch
                x:Name="IsActive"
                MinWidth="0"
                Header="IsActive"
                IsOn="True" />
            <ui:ToggleSwitch
                x:Name="IsIndeterminate"
                MinWidth="0"
                Header="IsIndeterminate"
                IsOn="True" />
            <Button Click="Button_Click" Content="Test" />
        </ui:SimpleStackPanel>

        <Slider
            x:Name="Value"
            Maximum="100"
            Minimum="0" />

        <ui:ProgressRing
            IsActive="{Binding IsOn, ElementName=IsActive}"
            IsEnabled="{Binding IsOn, ElementName=IsEnable}"
            IsIndeterminate="{Binding IsOn, ElementName=IsIndeterminate}"
            Value="{Binding Value, ElementName=Value}" />

        <ui:AppBarToggleButton Icon="Add" Label="Add" />

        <ui:AppBarButton
            Icon="Sort"
            IsCompact="True"
            Label="Sort">
            <ui:AppBarButton.Flyout>
                <ui:MenuFlyout>
                    <MenuItem Header="By rating" Tag="rating" />
                    <MenuItem Header="By match" Tag="match" />
                    <MenuItem Header="By distance" Tag="distance" />
                </ui:MenuFlyout>
            </ui:AppBarButton.Flyout>
        </ui:AppBarButton>

        <ui:CommandBar
            Background="Transparent"
            DefaultLabelPosition="Right"
            HorizontalAlignment="Left"
            IsOpen="False">
            <ui:AppBarButton Icon="Add" Label="Add" />
            <ui:AppBarButton Icon="Edit" Label="Edit" />
            <ui:AppBarSeparator />
            <ui:AppBarButton Icon="Share" Label="Share" />
            <ui:CommandBar.SecondaryCommands>
                <ui:AppBarButton Icon="Setting" Label="Settings" />
            </ui:CommandBar.SecondaryCommands>
        </ui:CommandBar>

        <!--<Calendar IsEnabled="{Binding IsOn, ElementName=IsEnable}" />

        <ui:ListView
            x:Name="ListView"
            IsEnabled="{Binding IsOn, ElementName=IsEnable}"
            SelectionMode="Multiple">
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
            <sys:String>Test</sys:String>
        </ui:ListView>-->
    </StackPanel>
</Window>
