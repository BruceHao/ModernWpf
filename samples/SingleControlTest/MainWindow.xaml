<Window
    x:Class="SingleControlTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SingleControlTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="MainWindow"
    Width="800"
    Height="450"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <ui:ProgressBar
            Value="50"
            ui:ControlHelper.Description="Test"
            ui:ControlHelper.Header="Test"
            ui:ControlHelper.PlaceholderText="Test"
            IsIndeterminate="{Binding IsChecked, ElementName=IsEnable, Mode=TwoWay}" />
        <CheckBox
            x:Name="IsEnable"
            Content="IsEnable"
            IsChecked="True" />
    </StackPanel>
</Window>
